// main.js - put your code here
 $(document).ready(function() {
   // do stuff when DOM is ready
	 
	 $("a").click(function() {
	     alert("Hello world!");
	   });
	 
	 $.getJSON('http://crunch.kmi.open.ac.uk/people/~dsherlock/services/%20JSONexample.r', function(data) {
		  var items = [];
		 
		  $.each(data, function(key, val) {
		    items.push('<li id="' + key + '">' + val + '</li>');
		  });
		 
		  $('<ul/>', {
		    'class': 'my-new-list',
		    html: items.join('')
		  }).appendTo('body');
		});
	 
	 $.getJSON("http://crunch.kmi.open.ac.uk/people/~dsherlock/services/%20JSONexample.r",
			    function(data){
			      $('body').html(data.name).css("color","green");  
			    });
	 
 });